
video(autoplay, loop, muted, id="bgvid")
  source(src="../../../assets/videos/bg.mp4")

#login.col-md-33
  #logo.col-md-33
    img.col-md-9.col-md-offset-12(src="../../../assets/images/logo/klik.png", alt="logo klik")
  form.col-md-9.col-md-offset-12(name='form', ng-submit='login(form)', novalidate='')
      .form-group
        input.form-control(type='text', placeholder="admin@admin.com", name='email', ng-model='user.email')
      .form-group
        input.form-control(type='password', placeholder="admin" name='password', ng-model='user.password')

      .form-group.has-error
        p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
          | Please enter your email and password.
        p.help-block {{ errors.other }}

      div
        button.btn.btn-inverse.btn-lg.btn-login(type='submit')
          | Login
        = ' '


footer.footer
  .container
    p
      | Klik v0.0.1
      = ' | '
      a(href='http://messieurs.ch') Messieurs.ch
      