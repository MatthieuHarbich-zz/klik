#banner.hero-unit.col-sm-33
  .container
  
    h1 'Klik, 'Klik!
    p.lead Login to enjoy the beauty of clickable videos
    form(name='form', ng-submit='login(form)', novalidate='')
        .form-group
          input.form-control(type='text', placeholder="test@test.com", name='email', ng-model='user.email')
        .form-group
          input.form-control(type='password', placeholder="test" name='password', ng-model='user.password')

        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
            | Please enter your email and password.
          p.help-block {{ errors.other }}

        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Login
          = ' '


footer.footer
  .container
    p
      | Klik v0.0.1
      = ' | '
      a(href='http://messieurs.ch') Messieurs.ch
      